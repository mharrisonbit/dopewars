<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Title="{Binding Title}"
    x:Class="DopeWars.Views.MainPage"
    x:DataType="vm:MainPageViewModel"
    x:Name="TotalHomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:controls="clr-namespace:DopeWars.Components"
    xmlns:models="clr-namespace:DopeWars.Models"
    xmlns:vm="clr-namespace:DopeWars.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid Padding="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="75*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:WalletSummaryView
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="2"
            Padding="0" />
        <CollectionView
            Grid.Column="2"
            Grid.Row="1"
            ItemsSource="{Binding ListOfCities}"
            Margin="0,20,20,0">
            <CollectionView.Header>
                <Label
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Select A City" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:City">
                    <Grid Padding="10" RowDefinitions="50">
                        <controls:CustomButton
                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=SelectionCommand}"
                            CommandParameter="{Binding .}"
                            Grid.Row="0"
                            Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
