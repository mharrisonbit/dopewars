<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="DopeWars.Components.WalletSummaryView"
    x:DataType="viewModels:BaseViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:controls="clr-namespace:DopeWars.Components"
    xmlns:viewModels="clr-namespace:DopeWars.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="*,*"
        RowDefinitions="150,150,50,50"
        RowSpacing="5">
        <Label
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Text="{Binding CurrentUser.Cash, StringFormat='Cash Amount ${0}'}"
            VerticalTextAlignment="Center" />
        <Label
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Text="{Binding CurrentUser.Debit, StringFormat='Debit Amount ${0}'}"
            VerticalTextAlignment="Center" />
        <controls:CustomButton
            Command="{Binding DepositCash}"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            Text="Add to savings" />
        <controls:CustomButton
            Command="{Binding WithdrawCash}"
            Grid.ColumnSpan="2"
            Grid.Row="3"
            Text="Withdraw" />
    </Grid>
</ContentView>
